            },
            complete: function () {
                $("#categoriesLoader").css("display", "none");
                getIngredientsList();
            }
        });
    }
    
    function openModal() {
        var dropdown = $('#myModal').find('.select');

        dropdown.empty();

        $.ajax({
            type: 'POST',
            url: "/Menu/GetMenuDropdownList",
            data: { MenuTypeId: MenuTypeId },
            dataType: "json",
            success: function (response) {
                var appendDropdown = "<option value=''>Select Option</option>";
                for (var item = 0; item < response.length; item++) {
                    appendDropdown += '<option value="' + response[item].id + '">' + response[item].name + '</option>';
                }
                $("#menuDropdown").append(appendDropdown);

                
                $("#menuDropdown").change(function () {
                    var selectedMenuTypeId = $(this).val();
                    if (selectedMenuTypeId) {
                        
                        var selectedOption = response.find(menu => menu.id == selectedMenuTypeId);
                        $("#menuDropdown").empty().append('<option value="' + selectedOption.id + '">' + selectedOption.name + '</option>');
                    } else {
                        $("#menuDropdown").empty().append(appendDropdown);
                    }
                });
            },
            error: function (error) {
                console.log(error);
            }
        });

        $('#nameCheckbox, #dateCheckbox, #categoryCheckbox, #categoryPhotoCheckbox, #photoCheckbox, #linkCheckbox, #preparationCheckbox, #productsCheckbox, #ingredientsCheckbox, #cookingCheckbox, #weightCheckbox, #notesCheckbox, #beaCheckbox').prop('checked', true);

        $('#myModal').modal('show');
    }
</script>