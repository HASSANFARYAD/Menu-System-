    }

    function exportTable() {
        
        var name = $('#searchName').val();
        var startDate = $('#searchStartDate').val();
        var endDate = $('#searchEndDate').val();
        var categoriesId = $('#categoriesDropdown').val();

        var nameCheckbox = $('#nameCheckbox').prop('checked');
        var categoryCheckbox = $('#categoryCheckbox').prop('checked');
        var dateCheckbox = $('#dateCheckbox').prop('checked');
        var weightCheckbox = $('#weightCheckbox').prop('checked');
        var notesCheckbox = $('#notesCheckbox').prop('checked');
        var beaCheckbox = $('#beaCheckbox').prop('checked');
        var cookingCheckbox = $('#cookingCheckbox').prop('checked');
        var categoryPhotoCheckbox = $('#categoryPhotoCheckbox').prop('checked');
        var photoCheckbox = $('#photoCheckbox').prop('checked');
        var linkCheckbox = $('#linkCheckbox').prop('checked');
        var preperationCheckbox = $('#preperationCheckbox').prop('checked');
        var productsCheckbox = $('#productsCheckbox').prop('checked');
        var ingredientsCheckbox = $('#ingredientsCheckbox').prop('checked');

        if (!(nameCheckbox || categoryCheckbox || dateCheckbox || weightCheckbox || notesCheckbox || beaCheckbox || cookingCheckbox ||
            categoryPhotoCheckbox || photoCheckbox || linkCheckbox || preperationCheckbox || productsCheckbox || ingredientsCheckbox)) {
            $('#checkboxError').show();
            return;
        } else {
            $('#checkboxError').hide();
        }
        var selectedMenuId = $('#menuDropdown').val();

        downloadCSV(MenuTypeId, name, startDate, endDate, categoriesId,

            nameCheckbox, categoryCheckbox, dateCheckbox,
            weightCheckbox, notesCheckbox, beaCheckbox, cookingCheckbox, categoryPhotoCheckbox,
            photoCheckbox, linkCheckbox, preperationCheckbox,
            productsCheckbox, ingredientsCheckbox, selectedMenuId);

        $('#myModal').modal('hide');
    }

    function downloadCSV(MenuTypeId, Name, StartDate, EndDate, CategoriesId,

        nameCheckbox, categoryCheckbox, dateCheckbox,
        weightCheckbox, notesCheckbox,beaCheckbox, cookingCheckbox, categoryPhotoCheckbox,
        photoCheckbox, linkCheckbox, preperationCheckbox,
        productsCheckbox, ingredientsCheckbox, selectedMenuId) {
        $.ajax({
            type: 'POST',
            url: "../Menu/GenerateCSV",
            data:{
                Name: Name,
                StartDate: StartDate,
                EndDate: EndDate,
                CategoriesId: CategoriesId,
                MenuTypeId: MenuTypeId,
                 

                nameCheckbox: nameCheckbox,
                categoryCheckbox: categoryCheckbox,
                dateCheckbox: dateCheckbox,
                weightCheckbox: weightCheckbox,
                notesCheckbox: notesCheckbox,
                beaCheckbox:beaCheckbox,
                cookingCheckbox: cookingCheckbox,
                categoryPhotoCheckbox: categoryPhotoCheckbox,
                photoCheckbox: photoCheckbox,
                linkCheckbox: linkCheckbox,
                preperationCheckbox: preperationCheckbox,
                productsCheckbox: productsCheckbox,
                ingredientsCheckbox: ingredientsCheckbox,
                selectedMenuId: selectedMenuId
                

            },
            success: function (response) {
                var blob = new Blob([response], { type: 'text/csv' });

                if (window.navigator.msSaveOrOpenBlob) {
                    window.navigator.msSaveBlob(blob, 'Heather Stock - FALL_WINTER.csv');
                } else {
                    var link = document.createElement('a');
                    link.href = window.URL.createObjectURL(blob);
                    link.download = 'Heather Stock - FALL_WINTER.csv';

                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                }
            },
            error: function (error) {
                console.log("Menu", error);
            },
            complete: function () {
                $("#exportBtn").attr("disabled", false);
            }
        });
    }

