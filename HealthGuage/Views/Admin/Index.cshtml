@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center m-10">
    <div class="col-md-12">
        <h1 class="text-bold text-highlight"><u>Dashboard</u></h1>
    </div>

    <div class="col-md-4 col-md-offset-2">
        <div class="text-center text-white m-10" style="padding: 25px; background: #196f9c">
            <h3 class="text-semibold">Total Users</h3>
            <h2 class="text-bold">@ViewBag.UserCount</h2>
        </div>
    </div>

    <div class="col-md-4">
        <div class="text-center text-white m-10" style="padding: 25px; background: #196f9c">
            <h3 class="text-semibold">Total Ingredients</h3>
            <h2 class="text-bold">@ViewBag.Ingredients</h2>
        </div>
    </div>

</div>


<script>
    //Used to handle Sidebar links Activeness
    $('#adminIndex').addClass('active');

</script>
